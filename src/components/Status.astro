---
import Container from "./Container.astro"
import ServerStatus from "./Status.vue"

const servers = [
    { name: '工业园建筑服', ip: 'alsace.work' },
    { name: '工业园生存服', ip: 'survival.alsace.work' }
];
---

<div id="status">
    <Container>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
            {servers.map(server => (
                    <ServerStatus key={server.name} serverIp={server.ip} serverName={server.name} />
            ))}
        </div>
    </Container>
</div>
